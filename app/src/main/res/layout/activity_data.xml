<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".DataActivity"
    android:layout_margin="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/address"/>
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/link_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/address"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/roll_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonshape" />

        <Button
            android:id="@+id/offset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonshape"
            android:layout_gravity="left"
            android:layout_below="@id/roll_btn"/>


        <Button
            android:id="@+id/way_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/roll_btn"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonshape"
            android:padding="10dp"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/battery_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonshape"
            android:layout_below="@id/offset_btn"/>

        <Button
            android:id="@+id/signal_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/way_btn"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonshape"
            android:padding="10dp"
            android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/force_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttonshape"
        android:layout_gravity="center"
        android:layout_below="@id/signal_btn"/>
    </RelativeLayout>
</LinearLayout>